#!/bin/sh
#
# Pre-commit hook that runs the same checks as CI
# To skip this hook, use: git commit --no-verify

set -e

# Get repository root directory
REPO_ROOT="$(git rev-parse --show-toplevel)"
cd "$REPO_ROOT"

echo "Running pre-commit checks..."

# Check Rust formatting
echo "Checking Rust formatting..."
cargo fmt --all -- --check

# Run clippy
echo "Running clippy..."
cargo clippy --all-targets --all-features -- -D warnings

# Run Rust tests
echo "Running Rust tests..."
cargo test

# Run API tests
echo "Running API tests..."
cargo test --package lategrep-api

# Build documentation
echo "Building documentation..."
RUSTDOCFLAGS="-D warnings" cargo doc --no-deps --all-features

# ONNX crate checks
echo "Checking ONNX crate formatting..."
cd onnx && cargo fmt --all -- --check

echo "Running ONNX crate clippy..."
cargo clippy --all-targets -- -D warnings

echo "Running ONNX crate tests..."
cargo test

cd "$REPO_ROOT"

# Lint Python code
echo "Linting Python code..."
cd docs && uv run --extra dev ruff check . && uv run --extra dev ruff format --check .
cd "$REPO_ROOT"

# Run API integration tests
echo "Running API integration tests..."
./scripts/run-api-tests.sh

echo "All pre-commit checks passed!"
